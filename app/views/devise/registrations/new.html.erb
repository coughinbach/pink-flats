<div class="log-in">
  <div class="row">
    <div class="col-xs-4 col-xs-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <p>E-mail</p>
          <%= f.input :email, required: true, autofocus: true, placeholder: "johndoe@mail.com" %>
          <p>First name</p>
          <%= f.input :first_name, placeholder: "John" %>
          <p>Last name</p>
          <%= f.input :last_name, placeholder: "Doe" %>
          <p>Password (6 characters min.)</p>
          <%= f.input :password, required: true %>
          <p>Confirm password</p>
          <%= f.input :password_confirmation, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign up", class:"btn-block btn-show" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
