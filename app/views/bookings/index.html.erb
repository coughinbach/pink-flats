<div class="container">
  <div class="row">
    <%@bookings.each do |booking| %>
      <div class="col-sm-4 col-sm-offset-4">
          <h2 class="card-name"><%= booking.flat.address %></h2>
          <ul>
            <li>Nights: <%= booking.nights %></li>
            <li>Start: <%= booking.start_date %></li>
            <li>End: <%= booking.end_date %></li>
            <li>Number of guests: <%= booking.guests %></li>
            <li>Reserved by: <%= booking.user.first_name %> <%= booking.user.last_name %></li>
          <ul>
          <%= link_to "Cancel booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
