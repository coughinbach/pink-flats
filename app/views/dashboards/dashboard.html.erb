<div class="container">
  <h1 class="text-center"><%= current_user.first_name %>'s Dashboard</h1>
  <div class="row">
    <h2 class = "text-center">My bookings</h2>
    <% @bookings.each do |booking| %>
      <div class="col-sm-6">
        <ul class="list-unstyled text-center">
            <li><h3> <%= booking.flat.name %></h3></li>
            <li><strong># of nights:</strong> <%= booking.nights %></li>
            <li><strong>Start:</strong> <%= booking.start_date %></li>
            <li><strong>End:</strong> <%= booking.end_date %></li>
            <li><strong># of guests:</strong> <%= booking.guests %></li>
          <ul>
          <%= link_to "Cancel booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-primary btn-xs text-center" %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h2 class="text-center">My flats</h2>
    <% @flats.each do |flat| %>
      <div class="col-sm-6">
        <ul class="list-unstyled text-center">
            <li><h3> <%= flat.name %></h3></li>
            <li><strong>Address:</strong> <%= flat.address %></li>
            <li><strong>Description:</strong> <%= flat.description %></li>
            <li><strong>Nbr of rooms:</strong> <%= flat.rooms %></li>
            <li><strong>Price per night:</strong> <%= flat.price %></li>
          <ul>
      </div>
    <% end %>

  </div>
</div>
