<div class="container">
  <h1>My Dashboard</h1>
  <div class="row">
    <h2 class="title-header">My bookings</h2>
    <% @bookings.each do |booking| %>
      <div class="col-sm-4">
        <div class="bookings-card">
          <div class = "bookings-title">
            <h3 id="booking-name"> <%= booking.flat.name %></h3>
            <h4 id="booking-price"><%= booking.nights * booking.flat.price %>â‚¬ </h4>
          </div>
          <hr>
          <ul class="list-unstyled text-center">
            <li class="booking-details"><strong># of nights:</strong> <%= booking.nights %></li>
            <li class="booking-details"><strong>Start:</strong> <%= booking.start_date %></li>
            <li class="booking-details"><strong>End:</strong> <%= booking.end_date %></li>
            <li class="booking-details"><strong># of guests:</strong> <%= booking.guests %></li>
          <ul>
          <%= link_to "Cancel booking", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-primary btn-xs text-center", id:"cancel-btn" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <h2 class="title-header">My flats</h2>
    <% @flats.each do |flat| %>
      <div class="col-sm-4">
        <div class="flats-card">
          <div class="flats-title">
            <h3> <%= flat.name %></h3>
            <h4>Upcoming bookings: <%= @bookings.count %></h4>
          </div>
          <ul class="list-unstyled text-center">
            <li><strong>Address:</strong> <%= flat.address %></li>
            <li><strong>Description:</strong> <%= flat.description %></li>
            <li><strong>Nbr of rooms:</strong> <%= flat.guests %></li>
            <li><strong>Price per night:</strong> <%= flat.price %></li>
          <ul>
        </div>


      </div>
    <% end %>
  </div>
</div>
