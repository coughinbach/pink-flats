<div class="simple_form_for_new_flat">
  <%= simple_form_for [@flat] do |f| %>
  <%= f.input :name%>
  <%= f.input :address%>
  <%= f.input :description %>
  <%= f.input :guests, collection: (1..10) %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add your flat", class: "btn btn-primary button-new-flat" %>
<% end %>
</div>

