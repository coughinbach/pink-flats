<div class="simple_form_for_new_flat">
  <%= simple_form_for [@flat] do |f| %>
  <%= f.input :address %>
  <%= f.input :description %>
  <%= f.input :rooms, collection: (1..10), :placeholder => "how many room(s) available ?" %>
  <%= f.input :price %>
  <%= f.input :image, as: :file, label: "add pictures" %>
  <%= f.submit "Add your flat", class: "btn btn-primary" %>
<% end %>
</div>

