<%= simple_form_for [@flat, @booking] do |f| %>
   <%= f.input :start_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 1,order: [:day, :month, :year] %>
  <%= f.input :end_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 1,order: [:day, :month, :year] %>
  <%= f.input :guests %>
  <%= f.submit "Book now!", class: "btn btn-primary" %>
<% end %>
