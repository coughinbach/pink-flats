<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h1>Available rooms</h1>
      <p>Where will you make some memories this weekend?</p>
      <br>
      <div class="search-form">
        <%= form_tag flats_path, method: :get, width: 500, class: "form-inline" do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-bar-index",
          placeholder: "Enter a city to find your perfect love nest" %>
          <%= submit_tag 'Search', class: 'btn btn-search-index' %>
        <% end %>
        <br>
      </div>
    </div>
    <div class="col-xs-8 col-xs-offset-2">
      <p>Click on a marker to find the corresponding flat:</p>
      <br>
      <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>"></div>
    </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
        <div class="card-container">
          <%@flats.each do |flat| %>
            <% if flat.photo_url.nil? %>
              <div class="card" id="flat-<%= flat.id %>" style="background-image: url(http://res.cloudinary.com/dp7vcrxlv/image/upload/v1512041036/neonbrand-381372_hozxae.jpg)">
              <a class="card-link" href="<%= flat_path(flat) %>"></a>
              <div class="card-banner">
                <div class="card-name">
                  <%= flat.name %>
                </div>
                <div class="card-price">
                  <%= flat.price %>€
                </div>
              </div>
            </div>
          <% else %>

            <div class="card" id="flat-<%= flat.id %>" style="background-image: url(<%= cl_image_path flat.photo, height: 300, width: 400, class: "show-image" %>)">
              <a class="card-link" href="<%= flat_path(flat) %>"></a>
              <div class="card-banner">
                <div class="card-name">
                  <%= flat.name %>
                </div>
                <div class="card-price">
                  <%= flat.price %>€
                </div>
              </div>
            </div>
        <% end %>

          <% end %>
        </div>
      </div>
  </div>
</div>
