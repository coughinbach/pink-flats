<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <h1>Available rooms</h1>
      <p>Where will you make some memories this weekend?</p>
      <br>
      <div class="search-form">
        <%= form_tag flats_path, method: :get, width: 500, class: "form-inline" do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control search-bar-index",
          placeholder: "Enter a city to find your perfect love nest" %>
          <%= submit_tag 'Search', class: 'btn btn-search-index' %>
          <% end %>
          <br>
      </div>
    </div>
    <div class="col-xs-8 col-xs-offset-2">
        <div id="map" style="width: 100%; height: 300px;" data-markers="<%= @markers.to_json %>"></div>
    </div>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="card-container">
          <%@flats.each do |flat| %>
          <div class="card" style="background-image: url(<%= cl_image_path flat.photo, height: 300, width: 400, class: "show-image" %>)">
            <a class="card-link" href="<%= flat_path(flat) %>"></a>
            <div class="card-banner">
              <div class="card-name">
                <%= flat.name %>
              </div>
              <div class="card-price"><%= flat.price %>â‚¬</div>
            </div>
          </div>
          <% end %>
        </div>
      </div>

    <!-- <div class="col-xs-4">
      <div id="map" data-markers="<%= @markers.to_json %>"></div>
    </div> -->
  </div>
</div>
