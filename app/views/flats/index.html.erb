<%= render "shared/navbar" %>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <h1>Available rooms</h1>
      <p>Where will you make some memories this weekend?</p>
      <br>

      <div class="card-container" >
        <%@flats.each do |flat| %>
          <div class="card">
            <div class="card-banner" style="background-image: url(<%= cl_image_path flat.photo, height: 300, width: 400, class: "show-image" %>)">
              <%= link_to flat.name, flat_path(flat) %>
              <div class="card-price"><%= flat.price %>€</div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

